<aura:component controller="CampingListController">
    <aura:attribute name="items" type="Camping_Item__c[]"/>
    <aura:attribute name="newItem" type="Camping_Item__c"
            default="{ 'sobjectType': 'Camping_Item__c',
                              'Name': '',
                       'Quantity__c': 0,
                          'Price__c': 0,
                         'Packed__c': false }"/>
    <aura:handler name="init" action="{!c.doInit}" value="{!this}"/>    
    <!-- CREATE NEW CAMPING ITEM FORM -->
        <form class="slds-form_stacked">
            <lightning:input aura:id="itemform" label="Camping Item Name"
                             name="expensename"
                             value="{!v.newItem.Name}"
                             required="true"/>
            <lightning:input type="number" aura:id="itemform" label="Quantity"
                             name="expensequantity"
                             min="1"
                             value="{!v.newItem.Quantity__c}"
                             messageWhenRangeUnderflow="Enter a quantity that's at least 1."/>
            <lightning:input type="number" aura:id="itemform" label="Price"
                             name="expenseprice"
                             formatter="currency"
                             value="{!v.newItem.Price__c}"/>
            <lightning:input type="checkbox" aura:id="itemform" label="Packed"
                             name="itempacked"
                             checked="{!v.newItem.Packed__c}"/>
            <lightning:button label="Create Camping Item"
                              class="slds-m-top_medium"
                              variant="brand"
                              onclick="{!c.clickCreateItem}"/>
        </form>
        <!-- / CREATE NEW CAMPING ITEM FORM -->
    <lightning:card title="CampingItems">
        <p class="slds-p-horizontal_small">
            <aura:iteration items="{!v.items}" var="campItem">
                <c:campingListItem item="{!campItem}"/>
            </aura:iteration>
        </p>
    </lightning:card>
</aura:component>